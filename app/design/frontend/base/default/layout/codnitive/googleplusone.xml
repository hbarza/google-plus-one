<layout version="1.2.0">

    <catalog_product_view>
        <reference name="alert.urls">
            <block type="googleplusone/button" name="codnitive.googleplusone.beforeprice" as="codnitive-googleplusone" after="-">
                <action method="setTemplate" modules="codnitivegoogle/googleplusoneproduct/" options="enabled,place" conditions="1,before_price" operation="0.1">
                    <template>codnitive/googleplusone/button.phtml</template>
                </action>
            </block>
        </reference>
        <reference name="product.info.extrahint">
            <block type="googleplusone/button" name="codnitive.googleplusone.afterprice" as="codnitive-googleplusone" after="-">
                <action method="setTemplate" modules="codnitivegoogle/googleplusoneproduct/" options="enabled,place" conditions="1,after_price" operation="0.1">
                    <template>codnitive/googleplusone/button.phtml</template>
                </action>
            </block>
        </reference>
        <reference name="product.info.addtocart">
            <block type="googleplusone/button" name="codnitive.googleplusone.afteraddto" as="codnitive-googleplusone" after="-">
                <action method="setTemplate" modules="codnitivegoogle/googleplusoneproduct/" options="enabled,place" conditions="1,after_addto" operation="0.1">
                    <template>codnitive/googleplusone/button.phtml</template>
                </action>
            </block>
        </reference>
    </catalog_product_view>
    
</layout>
